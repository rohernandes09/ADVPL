Pergunte("MTA570",.T.)

DEFINE MSDIALOG oDlg FROM  71,50 TO 400,495 TITLE OemToAnsi(STR0007) PIXEL		//"Limpeza Mensal"
	
	@ 003,007 TO 43,215 PIXEL OF oDlg
