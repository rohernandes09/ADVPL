cDia := StrZero(Day(dDataBase),2)
cMes := StrZero(Month(dDataBase),2)

For nCont := 1 to Len(aArq)
	cDbf := SubStr(aArq[nCont],2,2) + SubStr(cNumEmp,1,2) + cDia + cMes
	Aadd(aDbf,cDbf)
Next nCont

Return aDbf
