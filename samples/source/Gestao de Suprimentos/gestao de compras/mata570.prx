//Cria tabela no banco para backup da SC8
cQry := " SELECT * INTO " + aDbf[5]
cQry += " FROM " + RetSqlName("SC8")
cQry += " WHERE D_E_L_E_T_ = ''"
cQry += " AND C8_FILIAL = '" + xFilial("SC8") + "'"
